<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_vertical|center_horizontal"
    android:background="@drawable/bg_ijo">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|center_vertical|center_horizontal"
        android:layout_marginTop="150dp"
        android:src="@drawable/logo_kemenperin_tulisan" />

    <ProgressBar
        android:layout_below="@+id/imageView"
        style="?android:attr/progressBarStyleLarge"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/splashscreenProgressBar1"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_below="@+id/splashscreenProgressBar1"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:text="Copyright Singgih Wisnu Pranata"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#70796E"/>

</RelativeLayout>
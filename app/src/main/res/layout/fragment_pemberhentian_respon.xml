<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/loginCard"
            app:cardCornerRadius="@dimen/loginCardRadius"
            android:elevation="5dp"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:layout_marginBottom="@dimen/loginViewsMargin"
            android:background="@color/whiteCardColor">

            <TextView
                android:layout_width="20dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteTextColor"
                android:text="1"
                android:shadowRadius="2"
                android:background="@color/colorAccent"
                />

            <LinearLayout
                style="@style/linearParent"
                android:layout_gravity="center"
                android:padding="@dimen/loginViewsMargin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="20dp"
                    android:textSize="18dp"

                    android:text="Apakah prosedur mengatur tentang siapa yang bertugas mendeklarasikan bahwa emergency response dihentikan dan (All â€“ Clear) untuk semua bahaya "/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelengkapan Dokumen"/>

                    <Spinner
                        android:id="@+id/c51_kelengkapan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/kelengkapan"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kesesuaian Dokumen"/>

                    <Spinner
                        android:id="@+id/c51_kesesuaian"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/kesesuaian"/>
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deskripsi">

                    <EditText
                        android:id="@+id/c51_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:minLines="6"
                        android:gravity="top|left"
                        android:maxLines="10"
                        android:scrollbars="vertical"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/loginCard"
            app:cardCornerRadius="@dimen/loginCardRadius"
            android:elevation="5dp"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:layout_marginBottom="@dimen/loginViewsMargin"
            android:background="@color/whiteCardColor">

            <TextView
                android:layout_width="20dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteTextColor"
                android:text="2"
                android:shadowRadius="2"
                android:background="@color/colorAccent"
                />

            <LinearLayout
                style="@style/linearParent"
                android:layout_gravity="center"
                android:padding="@dimen/loginViewsMargin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="20dp"
                    android:textSize="18dp"
                    android:text="Apakah prosedur mengatur tentang kriteria-kriteria terkait pemenuhan pemberhentian respon:
\n a) Potensi bahaya sangat kecil atau telah hilang
\n b) OSC, Site Management dan Line Management telah sepakat untuk menghentikan penanganan keadaan darurat
\n c) Rapat evaluasi kejadian untuk semua pembelajaran paska kejadian dan pengkinian prosedur preventif/mitigasi telah dicatat dan dilakukan"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelengkapan Dokumen"/>

                    <Spinner
                        android:id="@+id/c52_kelengkapan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/kelengkapan"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kesesuaian Dokumen"/>

                    <Spinner
                        android:id="@+id/c52_kesesuaian"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/kesesuaian"/>
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deskripsi">

                    <EditText
                        android:id="@+id/c52_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:minLines="6"
                        android:gravity="top|left"
                        android:maxLines="10"
                        android:scrollbars="vertical"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/loginCard"
            app:cardCornerRadius="@dimen/loginCardRadius"
            android:elevation="5dp"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:layout_marginBottom="@dimen/loginViewsMargin"
            android:background="@color/whiteCardColor">

            <TextView
                android:layout_width="20dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteTextColor"
                android:text="3"
                android:shadowRadius="2"
                android:background="@color/colorAccent"
                />

            <LinearLayout
                style="@style/linearParent"
                android:layout_gravity="center"
                android:padding="@dimen/loginViewsMargin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="20dp"
                    android:textSize="18dp"
                    android:text="Apakah prosedur mengatur kondisi dimana telah dinyatakan All-Clear, pekerja dan visitor bisa kembali masuk (re-entry) dan bekerja di fasilitas tersebut sesuai dengan peraturan lainnya"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelengkapan Dokumen"/>

                    <Spinner
                        android:id="@+id/c53_kelengkapan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/kelengkapan"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kesesuaian Dokumen"/>

                    <Spinner
                        android:id="@+id/c53_kesesuaian"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/kesesuaian"/>
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deskripsi">

                    <EditText
                        android:id="@+id/c53_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:minLines="6"
                        android:gravity="top|left"
                        android:maxLines="10"
                        android:scrollbars="vertical"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/loginCard"
            app:cardCornerRadius="@dimen/loginCardRadius"
            android:elevation="5dp"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:layout_marginBottom="@dimen/loginViewsMargin"
            android:background="@color/whiteCardColor">

            <TextView
                android:layout_width="20dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteTextColor"
                android:text="4"
                android:shadowRadius="2"
                android:background="@color/colorAccent"
                />

            <LinearLayout
                style="@style/linearParent"
                android:layout_gravity="center"
                android:padding="@dimen/loginViewsMargin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="20dp"
                    android:textSize="18dp"
                    android:text="Apakah prosedur mengatur kondisi dari fasilitas yang rusak akan dipasang barrier sebagai tanda, akan dilakukan insiden investigasi."/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelengkapan Dokumen"/>

                    <Spinner
                        android:id="@+id/c54_kelengkapan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/kelengkapan"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kesesuaian Dokumen"/>

                    <Spinner
                        android:id="@+id/c54_kesesuaian"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/kesesuaian"/>
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deskripsi">

                    <EditText
                        android:id="@+id/c54_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:minLines="6"
                        android:gravity="top|left"
                        android:maxLines="10"
                        android:scrollbars="vertical"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_simpan"
            style="@style/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:text="SIMPAN"
            android:layout_gravity="bottom"/>
    </LinearLayout>

</ScrollView>